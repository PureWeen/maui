<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue6995Modal"
             Title="FormSheet Modal">
    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="FormSheet Modal Page" 
               FontSize="18" 
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        
        <Label Text="This modal has isModalInPresentation=true, meaning swipe-to-dismiss is blocked. Try swiping down to dismiss - the attempt should be detected." 
               FontSize="14"
               HorizontalOptions="Center" />
        
        <Label x:Name="DismissAttemptLabel"
               Text="No dismiss attempt detected yet"
               AutomationId="DismissAttemptLabel"
               FontSize="16"
               TextColor="Red"
               HorizontalOptions="Center" />
        
        <Label x:Name="DismissAttemptCountLabel"
               Text="Dismiss attempts: 0"
               AutomationId="DismissAttemptCountLabel"
               FontSize="14"
               HorizontalOptions="Center" />
        
        <Button Text="Close Modal"
                AutomationId="CloseModalButton"
                Clicked="OnCloseModalClicked" />
    </StackLayout>
</ContentPage>
