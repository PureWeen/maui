<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue6995"
             Title="Issue 6995">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Test: Modal FormSheet Dismiss Attempt"
               FontSize="20"
               FontAttributes="Bold"
               AutomationId="TitleLabel"/>
        
        <Label Text="This test verifies that attempting to dismiss a FormSheet modal triggers the ModalDismissAttempted event."
               AutomationId="InstructionLabel"/>
        
        <Button Text="Show FormSheet Modal"
                AutomationId="ShowModalButton"
                Clicked="OnShowModalClicked"/>
        
        <Label x:Name="DismissAttemptLabel"
               Text="Dismiss attempts: 0"
               AutomationId="DismissAttemptLabel"/>
    </StackLayout>
</ContentPage>
